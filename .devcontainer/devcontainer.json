{
  "name": "Cookiecutter Django",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh"
      }
    }
  },
  "features": {
    "ghcr.io/infras-factory/devcontainer-features/riso-bootstrap:1.1.10": {
      "shellEnhancementLevel": "poweruser"
    },
    "ghcr.io/devcontainers/features/docker-in-docker": {}
  },
  "postCreateCommand": "/bin/bash .devcontainer/scripts/post-create.sh",
  "mounts": [
    "source=/Volumes/Data/.tmp,target=${containerWorkspaceFolder}/.tmp,type=bind,consistency=cached"
  ]
}
